<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".view.activity.AboutActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/menu_about"
        app:titleTextColor="@color/black"/>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="67Benda"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/greytextcolor3"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <TextView
        android:id="@+id/tvKodeVersi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode versi : "
        android:textSize="14sp"
        android:textColor="@color/greytextcolor2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>

    <TextView
        android:id="@+id/tvVersiAplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versi Aplikasi : "
        android:textSize="14sp"
        android:textColor="@color/greytextcolor2"
        android:layout_marginTop="1dp"
        android:layout_marginStart="20sp"
        android:layout_marginEnd="20sp"/>


    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:indeterminateDrawable="@drawable/progressbar_color"/>


    <WebView
        android:id="@+id/wvDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"/>

</LinearLayout>