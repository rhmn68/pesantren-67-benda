<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/rounded_full_white_20dp">

    <RelativeLayout
        android:id="@+id/rellayCiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfPic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            android:background="@drawable/circle_green"/>

        <TextView
            android:id="@+id/tvFirstCharForImageProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rellayCiv"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvSantriName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Farhan Ghifari"
            android:textColor="@color/greytextcolor2"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvStatusPresence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absen"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="@drawable/btn_red"
            android:layout_below="@id/tvSantriName"
            />

        <TextView
            android:id="@+id/tvKeteranganAbsen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvSantriName"
            android:layout_toEndOf="@id/tvStatusPresence"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Tanpa Keterangan"
            android:textColor="@color/red"
            android:textSize="14sp"
            />

    </RelativeLayout>
    
</RelativeLayout>