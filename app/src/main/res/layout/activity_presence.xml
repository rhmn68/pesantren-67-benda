<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.PresenceActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="@string/Presence"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:layout_below="@id/toolbar"
        android:popupBackground="@color/white"
        android:entries="@array/year_example"/>

    <com.applikeysolutions.cosmocalendar.view.CalendarView
        android:id="@+id/cosmoCalendar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinner"
        android:layout_above="@id/linlayBottom"
        android:theme="@style/AppTheme"
        style="@style/AppTheme"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/linlayBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/colorPrimary">

            <ProgressBar
                android:id="@+id/progressBarToday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/progressbar_color"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/ivRefreshToday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_refresh_white_24dp" />

            <RelativeLayout
                android:id="@+id/rellayTglHariIni"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/tvDateToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="16\nApril"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rellayInfoPresenceToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rellayTglHariIni">

                <TextView
                    android:id="@+id/todayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/today"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvStatusPresenceToday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/todayTitle"
                    android:text="Masuk"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="1dp"
            android:visibility="gone"
            android:background="@color/colorPrimary">

            <ProgressBar
                android:id="@+id/progressBarYesterday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/progressbar_color"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/ivRefreshYesterday"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_refresh_white_24dp" />

            <RelativeLayout
                android:id="@+id/rellayTglYesterday"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@color/colorPrimaryDark">

                <TextView
                    android:id="@+id/tvDateYesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="15\nApril"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rellayInfoPresenceYesterday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rellayTglYesterday">

                <TextView
                    android:id="@+id/tvYesterdayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yesterday"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvStatusPresenceYesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvYesterdayTitle"
                    android:text="Masuk"
                    android:textSize="16sp"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>