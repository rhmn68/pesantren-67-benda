<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.activity.HomeActivity">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="2dp"
        app:srcCompat="@drawable/ic_settings_work_tool"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:id="@+id/rellayProfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfPic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@color/colorAccent"
            app:civ_border_width="1dp"
            app:civ_border_color="#919191" />

        <TextView
            android:id="@+id/tvFirstCharForImageProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="F"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="22sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linlayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rellayProfil"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvSantriActive"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:text="Farhan Ghifari"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rellayInfoPresence"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/linlayName"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/border_black">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progressbar_color"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/ivRefresh"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_refresh_green_48dp" />

        <RelativeLayout
            android:id="@+id/rellayTglHariIni"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/round_left_green_darker">

            <TextView
                android:id="@+id/tvDatePresenceToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="16\nApril"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rellayTodayDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rellayTglHariIni">

            <TextView
                android:id="@+id/todayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                android:textSize="12sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tvStatusPresenceToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/todayTitle"
                android:text="Masuk"
                android:textSize="18sp"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/v_green_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_below="@id/rellayInfoPresence"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_below="@id/rellayInfoPresence"
        android:background="@drawable/border_black"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/btn_green_darker"
                android:onClick="gotoPresence"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/Presence"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/books" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_green_darker"
                android:elevation="4dp"
                android:onClick="gotoFinance"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="@string/finance"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/money" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>