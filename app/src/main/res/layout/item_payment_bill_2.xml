<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/tvKeteranganBayar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya SPP Pkl 2019"
            android:textColor="@color/greytextcolor2"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tvTotalNominal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 1.000.000"
            android:layout_marginTop="5dp"
            android:textColor="@color/greytextcolor"
            android:textSize="14sp"
            android:layout_below="@id/tvKeteranganBayar"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/silverlow"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>